<UserControl
    x:Class="FluorescenceFullAutomatic.Views.UploadSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FluorescenceFullAutomatic.Platform.Converters;assembly=FluorescenceFullAutomatic.Platform"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluorescenceFullAutomatic.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:FluorescenceFullAutomatic.ViewModels"
    d:DataContext="{d:DesignInstance vm:UploadSettingsViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <conv:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter" />
        <conv:BooleanToCheckedInverseConverter x:Key="BooleanToCheckedInverseConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  设置区域  -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="上传设置" />

                <!--  基本设置  -->
                <GroupBox Margin="0,0,0,10" Header="基本设置">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  是否上传  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="是否上传:" />
                        <CheckBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,5"
                            Content="启用上传"
                            IsChecked="{Binding OpenUpload}" />

                        <!--  自动上传  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="自动上传:" />
                        <CheckBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,5"
                            Content="启用自动上传"
                            IsChecked="{Binding AutoUpload}" />

                        <!--  自动重连  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="自动重连:" />
                        <CheckBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,5"
                            Content="启用自动重连"
                            IsChecked="{Binding AutoReconnection}" />

                        <!--  上传间隔时间  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="上传间隔时间(ms):" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Width="150"
                            MinHeight="30"
                            Margin="0,5"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding UploadIntervalTime}" />

                        <!--  是否双向上传  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="双向上传:" />
                        <CheckBox
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,5"
                            Content="启用双向上传"
                            IsChecked="{Binding TwoWay}" />

                        <!--  超时重试次数  -->
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="超时重试次数:" />
                        <TextBox
                            Grid.Row="5"
                            Grid.Column="1"
                            Width="150"
                            MinHeight="30"
                            Margin="0,5"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding OvertimeRetryCount}" />

                        <!--  超时时长  -->
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="超时时长(ms):" />
                        <TextBox
                            Grid.Row="6"
                            Grid.Column="1"
                            Width="150"
                            MinHeight="30"
                            Margin="0,5"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding Overtime}" />

                        <!--  自动获取申请信息  -->
                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="自动获取申请信息:" />
                        <CheckBox
                            Grid.Row="7"
                            Grid.Column="1"
                            Margin="0,5"
                            Content="启用自动获取申请信息"
                            IsChecked="{Binding AutoGetApplyTest}" />

                        <!--  匹配依据  -->
                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="匹配依据:" />
                        <StackPanel
                            Grid.Row="8"
                            Grid.Column="1"
                            Margin="0,5"
                            Orientation="Horizontal">
                            <RadioButton
                                Margin="0,0,15,0"
                                Content="条码"
                                IsChecked="{Binding MatchBarcode}" />
                            <RadioButton Content="编号" IsChecked="{Binding MatchBarcode, Converter={StaticResource BooleanToCheckedInverseConverter}}" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!--  通讯设置  -->
                <GroupBox Margin="0,0,0,10" Header="通讯设置">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  通讯方式  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="通讯方式:" />
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,5"
                            Orientation="Horizontal">
                            <RadioButton
                                Margin="0,0,15,0"
                                Content="串口"
                                IsChecked="{Binding SerialPort}" />
                            <RadioButton Content="网口" IsChecked="{Binding SerialPort, Converter={StaticResource BooleanToCheckedInverseConverter}}" />
                        </StackPanel>
                        <!--  字符编码  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="字符编码:" />
                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="150"
                            Margin="0,5"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TextBlockBorderStyle}">
                            <ComboBox
                                Width="150"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding Charsets}"
                                SelectedItem="{Binding Charset}" />
                        </Border>
                        <!--  串口  -->
                        <Grid
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Visibility="{Binding SerialPort, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  波特率  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="波特率:" />
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="150"
                                Margin="0,5"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding BaudRates}"
                                SelectedItem="{Binding BaudRate}" />

                            <!--  数据位  -->
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="数据位:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,5"
                                VerticalAlignment="Center"
                                Text="8" />

                            <!--  停止位  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="停止位:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,5"
                                VerticalAlignment="Center"
                                Text="1" />
                        </Grid>
                        <!--  网口  -->
                        <Grid
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Visibility="{Binding SerialPort, Converter={StaticResource BooleanToVisibilityConverterInverse}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  服务器IP  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="服务器IP:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="200"
                                MinHeight="30"
                                Margin="0,5"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBoxDefaultStyle}"
                                Text="{Binding ServiceIP}" />

                            <!--  服务器端口  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="服务器端口:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="150"
                                MinHeight="30"
                                Margin="0,5"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBoxDefaultStyle}"
                                Text="{Binding ServicePort}" />


                        </Grid>
                    </Grid>
                </GroupBox>



            </StackPanel>
        </ScrollViewer>

        <!--  按钮区域  -->
        <Border
            Grid.Row="1"
            Background="#F0F0F0"
            BorderBrush="#DDDDDD"
            BorderThickness="0,1,0,0">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  连接按钮  -->
                <Button
                    Grid.Column="0"
                    Width="120"
                    Height="30"
                    Command="{Binding ConnectCommand}"
                    Content="建立连接" />
                <Button
                    Grid.Column="0"
                    Width="140"
                    Command="{Binding DisconnectCommand}"
                    Content="断开连接"
                    Style="{StaticResource Button.Default}" />

                <!--  连接状态  -->
                <TextBlock
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding ConnectionStatus}" />

                <!--  保存按钮  -->
                <Button
                    Grid.Column="3"
                    Width="140"
                    Command="{Binding SaveSettingsCommand}"
                    Content="保存设置"
                    Style="{StaticResource Button.Accent}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
