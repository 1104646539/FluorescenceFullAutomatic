<UserControl
    x:Class="FluorescenceFullAutomatic.Views.Ctr.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluorescenceFullAutomatic.Views.Ctr"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:FluorescenceFullAutomatic.ViewModels"
    MinWidth="150"
    MinHeight="150"
    d:DataContext="{d:DesignInstance vm:ProgressDialogViewModel}"
    d:MinHeight="150"
    d:MinWidth="150"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="WindowStyle" Value="None" />
        </Style>
    </prism:Dialog.WindowStyle>


    <Border
        Grid.Row="0"
        Grid.RowSpan="2"
        MinWidth="150"
        MinHeight="150"
        Background="#666666"
        CornerRadius="10">
        <StackPanel Orientation="Vertical">
            <mah:ProgressRing
                Grid.Row="0"
                Width="80"
                Height="80"
                Margin="0,10,0,10"
                Foreground="White"
                IsActive="True" />
            <TextBlock
                Grid.Row="1"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White"
                Text="{Binding Msg}"
                Visibility="{Binding ShowMsg}" />
        </StackPanel>
    </Border>


</UserControl>
