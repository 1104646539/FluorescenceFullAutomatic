<UserControl
    x:Class="FluorescenceFullAutomatic.Views.Ctr.ProjectDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluorescenceFullAutomatic.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FluorescenceFullAutomatic.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance vm:ProjectDetailsViewModel}"
    d:DesignHeight="1080"
    d:DesignWidth="1800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题  -->
        <TextBlock
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="项目详情" />

        <!--  内容区域  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!--  基本信息  -->
                <GroupBox Margin="0,0,0,20" Header="基本信息">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  项目名称  -->
                        <TextBlock
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="项目名称：" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,20,10"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />

                        <!--  标识码  -->
                        <TextBlock
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="标识码：" />
                        <TextBlock
                            Grid.Column="3"
                            Margin="0,0,0,10"
                            VerticalAlignment="Center"
                            Text="{Binding IdentifierCode}" />

                        <!--  批号  -->
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="批号：" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,20,10"
                            VerticalAlignment="Center"
                            Text="{Binding BatchNum}" />

                        <!--  项目编码  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="项目编码：" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="3"
                            Margin="0,0,0,10"
                            Text="{Binding ProjectCode}" />

                        <!--  峰值宽度  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="峰宽：" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding PeakWidth, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  峰值距离  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="峰距：" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding PeakDistance, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  扫描起始  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="扫描起点：" />
                        <TextBox
                            Grid.Row="4"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ScanStart, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  扫描结束  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="扫描终点：" />
                        <TextBox
                            Grid.Row="4"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ScanEnd, Converter={StaticResource DoubleValidationConverter}}" />

                    </Grid>
                </GroupBox>

                <!--  参数设置  -->
                <GroupBox Margin="0,0,0,20" Header="参数设置">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>


                        <!--  项目单位  -->
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="项目单位：" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ProjectUnit}" />
                        <!--  临界值  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="临界值：" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ProjectLjz, Converter={StaticResource IntValidationConverter}}" />

                        <!--  A1  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="A1：" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding A1, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  A2  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="A2：" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding A2, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  X0  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,20,10"
                            VerticalAlignment="Center"
                            Text="X0：" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding X0, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  P  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="P：" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding P, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  最大浓度  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="最大浓度：" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ConMax, Converter={StaticResource IntValidationConverter}}" />
                    </Grid>
                </GroupBox>

                <!--  双联卡参数  -->
                <GroupBox
                    Margin="0,0,0,20"
                    Header="双联卡参数"
                    Visibility="{Binding IsDoubleCard, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  项目单位2  -->
                        <TextBlock
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="项目单位：" />
                        <TextBox
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ProjectUnit2}" />

                        <!--  临界值2  -->
                        <TextBlock
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="临界值：" />
                        <TextBox
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ProjectLjz2, Converter={StaticResource IntValidationConverter}}" />

                        <!--  A12  -->
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="A1：" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding A12, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  A22  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="A2：" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding A22, Converter={StaticResource DoubleValidationConverter}}"
                            TextChanged="TextBox_TextChanged" />

                        <!--  X02  -->
                        <TextBlock
                            Grid.Row="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="X0：" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            MinHeight="30"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding X02, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  P2  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="P：" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="3"
                            MinHeight="30"
                            Margin="0,0,0,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding P2, Converter={StaticResource DoubleValidationConverter}}" />

                        <!--  最大浓度2  -->
                        <TextBlock
                            Grid.Row="3"
                            Margin="0,0,10,10"
                            VerticalAlignment="Center"
                            Text="最大浓度：" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,20,10"
                            Style="{StaticResource TextBoxDefaultStyle}"
                            Text="{Binding ConMax2, Converter={StaticResource IntValidationConverter}}" />
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!--  底部按钮  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="120"
                Margin="0,0,30,0"
                Command="{Binding SaveCommand}"
                Content="保存"
                Style="{StaticResource Button.Accent}" />
            <Button
                Width="120"
                Command="{Binding CloseCommand}"
                Content="取消"
                Style="{StaticResource Button.Default}" />
        </StackPanel>
    </Grid>
</UserControl>
