<UserControl
    x:Class="FluorescenceFullAutomatic.Views.Ctr.GetApplyTestDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluorescenceFullAutomatic.Views.Ctr"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FluorescenceFullAutomatic.ViewModels"
    x:Name="getApplyTestDialogControl"
    Width="600"
    d:DataContext="{d:DesignInstance vm:GetApplyTestDialogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="{Binding Title}" />


        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                Orientation="Horizontal">
                <RadioButton
                    Margin="0,0,20,0"
                    Content="编号"
                    GroupName="QueryType"
                    IsChecked="{Binding IsTestNumQueryMode, Mode=TwoWay}" />
                <RadioButton
                    Margin="0,0,20,0"
                    Content="条码"
                    GroupName="QueryType"
                    IsChecked="{Binding IsBarcodeQueryMode, Mode=TwoWay}" />
                <RadioButton
                    Content="送检时间"
                    GroupName="QueryType"
                    IsChecked="{Binding IsApplyTimeQueryMode, Mode=TwoWay}" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Visibility="{Binding TextBoxVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        mah:TextBoxHelper.Watermark="{Binding StartWatermarkText}"
                        Text="{Binding QueryText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="至"
                        Visibility="{Binding EndVisibility}" />

                    <TextBox
                        Grid.Column="2"
                        Margin="0,0,10,0"
                        mah:TextBoxHelper.Watermark="{Binding EndWatermarkText}"
                        Text="{Binding EndQueryText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding EndVisibility}" />
                </Grid>

                <Grid
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Visibility="{Binding TimePickerVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DatePicker
                        Grid.Column="0"
                        MinWidth="140"
                        Margin="0,0,10,0"
                        SelectedDate="{Binding StartApplyTime, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="至"
                        Visibility="{Binding EndVisibility}" />

                    <DatePicker
                        Grid.Column="2"
                        MinWidth="140"
                        Margin="0,0,10,0"
                        SelectedDate="{Binding EndApplyTime, Mode=TwoWay}"
                        Visibility="{Binding EndVisibility}" />
                </Grid>

                <Button
                    Grid.Column="3"
                    MinWidth="80"
                    Command="{Binding QueryCommand}"
                    Content="查询"
                    Style="{DynamicResource Button.Accent}" />
            </Grid>
        </Grid>


        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,5"
                Foreground="{Binding StatusColor}"
                Text="{Binding StatusMessage}" />


            <DataGrid
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserSortColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding ApplyTestList}"
                Visibility="{Binding ResultVisibility}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TestNum}"
                        Header="检测编号" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Barcode}"
                        Header="条码" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Patient.PatientName}"
                        Header="姓名" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Patient.ApplyTime, StringFormat=yyyy-MM-dd HH:mm}"
                        Header="申请时间" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <Grid
            Grid.Row="3"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                MinWidth="100"
                Command="{Binding ConfirmCommand}"
                Content="{Binding ConfirmText}"
                IsEnabled="{Binding CanConfirm}"
                Style="{StaticResource Button.Accent}" />
            <Button
                Grid.Column="1"
                MinWidth="100"
                Margin="20,0,0,0"
                Command="{Binding CancelCommand}"
                Content="{Binding CancelText}"
                Style="{DynamicResource Button.Secondary}"
                Visibility="{Binding ShowCancel}" />
            <Button
                Grid.Column="2"
                MinWidth="100"
                Margin="20,0,0,0"
                Command="{Binding CloseCommand}"
                Content="{Binding CloseText}"
                Style="{DynamicResource Button.Default}"
                Visibility="{Binding ShowClose}" />
        </Grid>
    </Grid>
</UserControl> 