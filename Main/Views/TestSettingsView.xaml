<UserControl
    x:Class="FluorescenceFullAutomatic.Views.TestSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluorescenceFullAutomatic.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:FluorescenceFullAutomatic.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance vm:TestSettingsViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1250"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题  -->
        <TextBlock
            Grid.Row="0"
            Margin="20,20,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="测试设置" />

        <!--  设置区域  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Test Number  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="检测编号:" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="200"
                    MinHeight="30"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TextBoxDefaultStyle}"
                    Text="{Binding TestNum}" />

                <!--  Sampling Volume  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="取样量:" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="200"
                    MinHeight="30"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TextBoxDefaultStyle}"
                    Text="{Binding SamplingVolumn}" />

                <!--  Cleanout Duration  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="清洗时长:" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="200"
                    MinHeight="30"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TextBoxDefaultStyle}"
                    Text="{Binding CleanoutDuration}" />

                <!--  Reaction Duration  -->
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="反应时长:" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="200"
                    MinHeight="30"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TextBoxDefaultStyle}"
                    Text="{Binding ReactionDuration}" />


                <!--  打印机设置  -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="打印机:" />
                <Border
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="200"
                    MinHeight="30"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TextBlockBorderStyle}">
                    <ComboBox
                        Width="200"
                        ItemsSource="{Binding PrinterList}"
                        SelectedItem="{Binding SelectedPrinter}" />
                </Border>
                <!--  单联报告模板  -->
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="单联报告模板:" />
                <DockPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="0,0,0,10">
                    <Button
                        Width="80"
                        Margin="10,0,0,0"
                        Command="{Binding SelectSingleTemplateCommand}"
                        Content="浏览..."
                        DockPanel.Dock="Right"
                        Style="{StaticResource Button.Default}" />
                    <TextBox
                        MinHeight="30"
                        Style="{StaticResource TextBoxDefaultStyle}"
                        Text="{Binding SingleReportTemplatePath}" />
                </DockPanel>

                <!--  双联报告模板  -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    VerticalAlignment="Center"
                    Text="双联报告模板:" />
                <DockPanel
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="0,0,0,10">
                    <Button
                        Width="80"
                        Margin="10,0,0,0"
                        Command="{Binding SelectDoubleTemplateCommand}"
                        Content="浏览..."
                        DockPanel.Dock="Right"
                        Style="{StaticResource Button.Default}" />
                    <TextBox
                        MinHeight="30"
                        Style="{StaticResource TextBoxDefaultStyle}"
                        Text="{Binding DoubleReportTemplatePath}" />
                </DockPanel>
                <!--  Scan Barcode  -->
                <CheckBox
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="0,0,0,10"
                    Content="是否扫描条形码"
                    IsChecked="{Binding IsScanBarcode}" />

                <!--  Auto Print Ticket  -->
                <CheckBox
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="0,0,0,10"
                    Content="自动打印小票"
                    IsChecked="{Binding IsAutoPrintTicket}" />

                <!--  Auto Print A4 Report  -->
                <CheckBox
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="0,0,0,10"
                    Content="自动打印A4报告"
                    IsChecked="{Binding IsAutoPrintA4Report}" />

            </Grid>
        </ScrollViewer>

        <!--  保存按钮区域  -->
        <Border
            Grid.Row="2"
            Background="#F0F0F0"
            BorderBrush="#DDDDDD"
            BorderThickness="0,1,0,0">
            <Button
                Width="140"
                Margin="20,10,0,10"
                HorizontalAlignment="Left"
                Command="{Binding SaveSettingsCommand}"
                Content="保存设置"
                Style="{StaticResource Button.Accent}" />
        </Border>
    </Grid>
</UserControl>
